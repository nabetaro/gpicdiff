{
  "name": "gpicdiff",
  "description": "Graphical Image Diff: can be integrated into SCM",
  "version": "0.1.0",
  "author": "KURASAWA Nozomu <nabetaro@caldron.jp>",
  "private": true,
  "scripts": {
    "lint": "vue-cli-service lint",
    "build": "vue-cli-service build",
    "electron:build": "vue-cli-service electron:build",
    "electron:build:dir": "vue-cli-service electron:build --dir",
    "electron:build:win": "vue-cli-service electron:build --win --x64",
    "electron:build:mac": "vue-cli-service electron:build --mac --x64",
    "electron:build:deb": "vue-cli-service electron:build --dir && electron-installer-debian --src dist_electron/linux-unpacked/ --dest dist_electron/ --arch amd64",
    "electron:serve": "vue-cli-service electron:serve",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps"
  },
  "main": "background.js",
  "dependencies": {
    "axios": "^0.19.2",
    "core-js": "^3.6.4",
    "electron-args": "^0.1.0",
    "vue": "^2.6.11",
    "vue-electron": "^1.0.6",
    "vue-router": "^3.1.6",
    "vuex": "^3.1.2",
    "vuex-electron": "^1.0.3"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.2.0",
    "@vue/cli-plugin-eslint": "~4.2.0",
    "@vue/cli-service": "~4.2.0",
    "babel-eslint": "^10.0.3",
    "electron": "^6.0.0",
    "electron-installer-debian": "^3.0.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.1.2",
    "node-sass": "^4.13.1",
    "sass-loader": "^8.0.2",
    "vue-cli-plugin-electron-builder": "~1.4.5",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
